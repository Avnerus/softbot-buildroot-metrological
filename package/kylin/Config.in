menuconfig BR2_PACKAGE_KYLIN_HARDWARE
	bool "kylin"
	help
	  All platform related packages for Realtek Kylin
	  
if BR2_PACKAGE_KYLIN_HARDWARE
	choice
		prompt "Kernel version"
		default BR2_PACKAGE_KYLIN_KERNEL_4_1_17
		help
		  Select the kernel version of the kylin platform
		  
		config BR2_PACKAGE_KYLIN_KERNEL_4_1_17
			bool "4.1.17"
			help
			  Needed if platform has a Linux kernel v4.1.17
			  
		config BR2_PACKAGE_KYLIN_KERNEL_4_1_35
			bool "4.1.35"
			help
			  Needed if platform has a Linux kernel v4.1.35 
	endchoice

	source "package/kylin/kylin-omx/Config.in"
	source "package/kylin/kylin-gst-omx/Config.in"
	source "package/kylin/kylin-gst-rtkv1sink/Config.in"
	source "package/kylin/kylin-platform-lib/Config.in"
	if !BR2_PACKAGE_KYLIN_PLATFORM_BIN_KO
	source "package/kylin/kylin-drivers/Config.in"
	endif
	source "package/kylin/kylin-graphics/Config.in"
	source "package/kylin/kylin-weston/Config.in"
	source "package/kylin/kylin-tools/Config.in"
endif

config BR2_PACKAGE_HAS_KYLIN
	bool

config BR2_PACKAGE_PROVIDES_KYLIN
	depends on BR2_PACKAGE_HAS_KYLIN
	string


