menuconfig BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
	bool "WebKitBrowser"
	depends on BR2_PACKAGE_WPEWEBKIT
	help
	   WebKitBrowser Plugin

if BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_AUTOSTART
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    bool "autostart"
    default y

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_STARTURL
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    string "start-url"
    default "about:blank"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_USERAGENT
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    string "useragent"
    default "Mozilla/5.0 (Macintosh, Intel Mac OS X 10_11_4) AppleWebKit/602.1.28+ (KHTML, like Gecko) Version/9.1 Safari/601.5.17"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_MEMORYPROFILE
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    string "memory-profile"
    default "128m"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_MEMORYPRESSURE
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    string "memory-pressure"
    default "databaseprocess:50m,networkprocess:100m,webprocess:300m,rpcprocess:50m"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_MEDIADISKCACHE
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    bool "media-disk-cache"
    default n

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_DISKCACHE
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    string "disk-cache"
    default "0"

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_XHRCACHE
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    bool "xhr-cache"
    default false

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_WEBKITBROWSER_TRANSPARENT
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    bool "transparent"
    default false

config BR2_PACKAGE_WPEFRAMEWORK_PLUGIN_YOUTUBE
    bool "youtube"
    depends on BR2_PACKAGE_WPEFRAMEWORK_OPEN_WEBKITBROWSER
    help
      A wrapper around the youtube app to start it as a
      wpeframework plugin.

endif
